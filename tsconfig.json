{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"strictNullChecks": true
	},
	"include": [
		"next-env.d.ts",
		"./dist/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/app/[[...slug]]/page.jsx",
		"src/app/[[...slug]]/client.jsx",
		"src/app/layout.jsx"
	],
	"exclude": ["node_modules"]
}
